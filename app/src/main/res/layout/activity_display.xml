<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokeball_background"
    tools:context="com.example.emre.pokedex.DisplayActivity">

    <ImageView
        android:id="@+id/pokeSprite"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pokename"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cont_desc_sprite" />

    <TextView
        android:id="@+id/pokename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="24sp"
        android:layout_marginTop="16sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/type1"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_above="@+id/type2"
        android:layout_alignLeft="@+id/type2"
        android:layout_alignStart="@+id/type2"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/cont_desc_t1" />

    <ImageView
        android:id="@+id/type2"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/pokeSprite"
        android:layout_alignEnd="@+id/pokename"
        android:layout_alignRight="@+id/pokename"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="25sp"
        android:layout_marginRight="25sp"
        android:contentDescription="@string/cont_desc_t2" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/type2"
        android:layout_alignLeft="@+id/type2"
        android:layout_alignRight="@+id/type2"
        android:layout_alignStart="@+id/type2"
        android:layout_below="@+id/pokename"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="32sp" />
</RelativeLayout>
